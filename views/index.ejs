<%- include('./layouts/header.ejs') %>
<%- include('./layouts/site/navbar.ejs') %>
    <!-- breadcrumb start -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Home</li>
            </ol>
        </nav>
    <!-- breadcrumb end -->
    
    <!-- content start -->
        <div class="container">
            <div class="jumbotron">
                <h1 class="display-4">Bem-vindo!</h1>
                <p class="lead">Este é um simples blog feito em nodeJS.</p>
                <hr class="my-4">
                <p>Descricao simples do blog.</p>
                <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
            </div>

            <div class="row">
                <% articles.forEach((article) => {%>
                    <div class="col-lg-4 col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %></h5>
                                <h6 class="card-subtitle mb-2 text-muted">Criado em <%= article.createdAt.toLocaleDateString() %></h6>
                                <p class="card-text">Com suporte a texto embaixo, que funciona como uma introdução a um conteúdo adicional.</p>
                                <a href="#" class="btn btn-sm btn-link">Leia mais</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

        </div>
    <!-- content end -->
<%- include('./layouts/scripts.ejs') %>
<%- include('./layouts/footer.ejs') %>